<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="6dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/round_border2"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/grid_img"
            android:background="@drawable/file_view_img"
            android:src="@drawable/file_background"
            android:clipToOutline="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="140dp"/>

        <FrameLayout
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/grid_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="UMC 파이널 프로젝트 (프로젝트 명)"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/file_ver_state"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:backgroundTint="#527FF5"
                android:background="@drawable/state_oval"/>

        </FrameLayout>


        <TextView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/grid_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="2023.06.13 ~ (진행 기간)"
            android:textColor="#99000000"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>