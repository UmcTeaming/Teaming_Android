<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_margin="6dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/round_border"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/grid_img"
            android:background="@drawable/file_view_img"
            android:src="@drawable/file_background"
            android:clipToOutline="true"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="140dp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/grid_title"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/roboto_bold"
            android:text="UMC 파이널 프로젝트 (프로젝트 명)"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/grid_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:text="2023.06.13 ~ (진행 기간)"
            android:textColor="#99000000"
            android:textSize="11sp" />

    </LinearLayout>
</LinearLayout>