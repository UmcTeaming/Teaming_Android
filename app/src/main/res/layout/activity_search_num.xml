<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:enabled="false"
        android:id="@+id/Button_reset"
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/round_border4"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="비밀번호 재설정"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        >
    </Button>
    
    <ImageView
        android:id="@+id/img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/closed"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>
    
    <TextView
        app:layout_constraintHorizontal_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="비밀번호 찾기"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>

    <TextView
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:color="#4D000000"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="가입한 이메일 주소를 입력해주세요."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/img"
        >
    </TextView>

    <TextView
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:color="#4D000000"
        android:textSize="14sp"
        android:text="비밀번호 재설정을 위한 메일을 보내드리겠습니다."
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/text2"
        >
    </TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:textColor="#194AC2"
        android:text="이메일"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/text3"
        >
    </TextView>

    <EditText
        android:id="@+id/Text_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColorHint="#4D000000"
        android:backgroundTint="#527FF5"
        android:textSize="14sp"
        android:hint=" abc@naver.com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4"
        >
    </EditText>

    <ImageButton
        android:id="@+id/x"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/Text_email"
        app:layout_constraintRight_toRightOf="@id/Text_email"
        >
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:textColor="#527FF5"
        android:text="대소문자를 구분하여 입력해주세요."
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/Text_email"
        app:layout_constraintTop_toBottomOf="@id/Text_email"
        >
    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>