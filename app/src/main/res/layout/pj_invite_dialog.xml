<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/white">

    <TextView
        android:paddingStart="3dp"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#194AC2"
        android:fontFamily="@font/pretendard_bold"
        android:text="이메일"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0"
        />

    <EditText
        android:id="@+id/email_write"
        android:layout_marginTop="10dp"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:fontFamily="@font/pretendard_medium"
        android:textColorHint="#4D000000"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:hint="초대할 팀원의 이메일을 입력해주세요."
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_write"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/cancel_chk_button"
            android:layout_marginEnd="7dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/cancle_chk_btn"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/invite_chk_btn"
            android:layout_marginStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/invite_chk_btn"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
