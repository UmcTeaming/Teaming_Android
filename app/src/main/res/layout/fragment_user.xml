<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/user_back"
        android:scaleType="centerCrop"
        android:padding="0sp"
        >
    </ImageView>

    <TextView
        android:id="@+id/text1"
        android:fontFamily="@font/pretendard_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@id/user_descrip"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/user_descrip"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Button_img"
                android:fontFamily="@font/pretendard_medium"
                android:background="@drawable/button_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:textSize="13sp"
                android:textColor="#4D000000"
                >
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:visibility="invisible"
                android:id="@+id/text_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#4D000000"
                android:text="이미지"
                android:fontFamily="@font/pretendard_medium"
                android:layout_gravity="center"
                >
            </TextView>



        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/bye_frame"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:maxLength="4"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최강창민"
                    android:textSize="23sp"
                    android:textColor="#ffffff"
                    android:background="@null"
                    />

                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:id="@+id/Button_pencil"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:padding="1sp"
                    android:src="@drawable/pencil"
                    android:background="#00ff0000"
                    >
                </ImageButton>


            </LinearLayout>

            <TextView
                android:layout_gravity="start"
                android:fontFamily="@font/pretendard_medium"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teaming@xlald.com"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/name"
                app:layout_constraintTop_toBottomOf="@id/name"
                >
            </TextView>

        </LinearLayout>


    </LinearLayout>



    <View
        android:id="@+id/line"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toBottomOf="@id/user_descrip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    </View>

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/chat"
        android:background="#00ff0000"
        android:scaleType="centerCrop"
        android:padding="0sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/user_descrip"
        app:layout_constraintStart_toStartOf="@id/line"
        >
    </ImageButton>

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의사항"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#99000000"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/chat"
        app:layout_constraintEnd_toStartOf="@id/secret"
        >
    </TextView>

    <ImageButton
        android:id="@+id/secret"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/lock_open"
        android:background="#00ff0000"
        android:scaleType="centerCrop"
        android:padding="0sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintTop_toTopOf="@id/chat"
        app:layout_constraintStart_toStartOf="@id/chat"
        app:layout_constraintEnd_toEndOf="@id/guard"
        >
    </ImageButton>

    <TextView
        android:id="@+id/text_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#99000000"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/secret"
        app:layout_constraintEnd_toStartOf="@id/guard"
        >
    </TextView>

    <ImageButton
        android:id="@+id/guard"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/guard"
        android:background="#00ff0000"
        android:scaleType="centerCrop"
        android:padding="2sp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="@id/chat"
        app:layout_constraintEnd_toEndOf="@id/line"
        >
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용 약관"
        android:textSize="11sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#99000000"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/text_chat"
        app:layout_constraintStart_toEndOf="@id/secret"
        >
    </TextView>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자주 묻는 질문"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#99000000"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toTopOf="@id/line"
        >
    </TextView>

    <ImageButton
        android:id="@+id/go_question"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/line"
        app:layout_constraintTop_toTopOf="@id/question"
        android:background="#00ff0000"
        android:scaleType="centerCrop"
        android:padding="0sp"
        android:src="@drawable/right"
        >
    </ImageButton>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
    </View>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:textColor="#99000000"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/question"
        >
    </TextView>

    <ImageButton
        android:id="@+id/go_logout"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/line"
        app:layout_constraintTop_toTopOf="@id/logout"
        android:background="#00ff0000"
        android:scaleType="centerCrop"
        android:padding="0sp"
        android:src="@drawable/right"
        >
    </ImageButton>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:background="#1A000000"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
    </View>


</androidx.constraintlayout.widget.ConstraintLayout>