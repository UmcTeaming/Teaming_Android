<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NameFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력해주세요"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:textColorHint="#80000000"
        android:backgroundTint="#527FF5"
        android:textColor="#000000"
        android:lines="1"
        android:singleLine="true"
        android:textSize="10sp"
        tools:ignore="MissingConstraints"
        >
    </EditText>

    <Button
        android:layout_width="45dp"
        android:layout_height="18dp"
        android:background="@drawable/button_check"
        android:text="확인"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gmarket_sans_ttf_bold"
        app:layout_constraintRight_toRightOf="@id/edittext"
        app:layout_constraintTop_toTopOf="@id/edittext"
        >
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>