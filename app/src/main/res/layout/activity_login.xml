<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ellipse_119"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@id/Text_email"
        app:layout_constraintEnd_toEndOf="@id/text1"
        >
    </ImageView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/rectangle_1838"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        >
    </ImageView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginStart="50dp"
        android:layout_marginTop="230dp"
        android:textSize="35sp"
        android:textColor="#547ADD"
        android:text="Log In"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>


    <EditText
        android:paddingStart="20dp"
        android:singleLine="true"
        android:maxLines="1"
        android:id="@+id/Text_email"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/pretendard_light"
        android:textColorHint="#194AC2"
        android:hint="e-mail"
        android:background="@drawable/login_edittext"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:lines="1"
        >
    </EditText>

    <EditText
        android:paddingStart="20dp"
        android:singleLine="true"
        android:maxLines="1"
        android:id="@+id/Text_num"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/pretendard_light"
        android:textColorHint="#194AC2"
        android:hint="password"
        android:background="@drawable/login_edittext"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Text_email"
        android:inputType="textPassword"
        android:lines="1"
        >
    </EditText>

    <Button
        android:id="@+id/Button_login"
        android:layout_width="match_parent"
        android:fontFamily="@font/pretendard_bold"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bin_blue"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="로그인 하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Text_email"
        >
    </Button>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Text_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/Button_go_search"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#194AC2"
            android:text="비밀번호 찾기"
            android:layout_marginEnd="20dp"
            >
        </TextView>

        <TextView
            android:id="@+id/bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:textColor="#033FFF"
            android:text="|"
            android:textSize="15sp"
            >
        </TextView>

        <TextView
            android:id="@+id/Button_go_membership"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:textColor="#194AC2"
            android:text="회원가입"
            android:layout_marginStart="20dp"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        >

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/toggle_background"
            android:layout_gravity="center_vertical"
            android:textOn=" "
            android:textOff=" "
            >
        </ToggleButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동 로그인"
            android:textSize="14sp"
            android:textColor="#80000000"
            android:layout_marginStart="10dp"
            >
        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
