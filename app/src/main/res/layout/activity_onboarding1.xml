<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:src="@drawable/phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="410dp"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintStart_toStartOf="@id/phone"
        >
    </ImageView>
    <ImageView
        android:id="@+id/phone"
        android:layout_width="260dp"
        android:layout_height="450dp"
        android:layout_marginTop="160dp"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </ImageView>

    <Button
        android:id="@+id/button1"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/bin_blue"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </Button>
    <Button
        android:id="@+id/button2"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/bin_black"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintStart_toEndOf="@id/button1"
        >
    </Button>
    <Button
        android:id="@+id/button3"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:background="@drawable/bin_black"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/button2"
        app:layout_constraintStart_toEndOf="@id/button2"
        >
    </Button>

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:textColor="#527FF5"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="20sp"
        android:layout_marginStart="230dp"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintStart_toEndOf="@id/button3"
        >
    </TextView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="효율적인"
        android:textColor="#B3000000"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="28sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 파일 업로드"
        android:textColor="#527FF5"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/text1"
        app:layout_constraintTop_toTopOf="@id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="지저분한 메신저앱은 이제 그만!"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:textSize="16sp"
        android:textColor="#4D000000"
        >
    </TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="파일을 깔끔하게 정리하고"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:textSize="16sp"
        android:textColor="#4D000000"
        >
    </TextView>
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="피드백을 모아볼 수 있어"
        app:layout_constraintStart_toStartOf="@id/text4"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:textSize="17sp"
        android:textColor="#4D000000"
        >
    </TextView>
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="소통에 혼선은 막아줘요."
        app:layout_constraintStart_toStartOf="@id/text5"
        app:layout_constraintTop_toBottomOf="@id/text5"
        android:textSize="16sp"
        android:textColor="#4D000000"
        >
    </TextView>


    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bin_blue"
        android:text="다음으로"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="640dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>