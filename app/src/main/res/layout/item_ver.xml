<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_height="80dp"
    android:background="@drawable/round_border"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ver_state1"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/state_oval"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="14sp"
                    android:id="@+id/ver_title"
                    android:layout_marginTop="17dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="26.21dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="UMC 파이널 프로젝트 (프로젝트명)" />

                <TextView
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/ver_date"
                    android:textColor="#99000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:text="2023.07.01 ~"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>