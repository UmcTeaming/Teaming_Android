<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June"
            android:textSize="20sp"
            android:textColor="#527FF5"
            app:layout_constraintBottom_toBottomOf="@id/day_week_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            tools:ignore="SpeakableTextPresentCheck"
            android:id="@+id/right_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/month_text"
            android:background="@drawable/cheveron_left"
            app:layout_constraintStart_toEndOf="@+id/month_text"
            app:layout_constraintTop_toTopOf="@+id/month_text" />
        <Button
            tools:ignore="SpeakableTextPresentCheck"
            android:id="@+id/left_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/cheveron_right"
            app:layout_constraintBottom_toBottomOf="@+id/month_text"
            app:layout_constraintEnd_toStartOf="@+id/month_text"
            app:layout_constraintTop_toTopOf="@+id/month_text" />
        
        <LinearLayout
            android:id="@+id/day_week_text"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SUN"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="MON"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TUE"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="WED"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="THU"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="FRI"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SAT"
                android:gravity="center"
                android:textColor="@color/cal_day_name_color"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/day_week_text"
            app:layout_constraintBottom_toTopOf="@+id/split"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다가오는 일정"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_view"
            android:layout_marginLeft="20dp"
            />
        <Button
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginTop="5dp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/group_1871"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_view"
            android:layout_marginRight="20dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedule_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/split"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>