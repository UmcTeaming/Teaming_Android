<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalFragment"
    android:background="@color/white">
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/back"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:text="카리나님의 일정"
            android:fontFamily="@font/gmarket_sans_ttf_bold"
            android:id="@+id/cal_username"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/cal_desc"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            app:layout_constraintTop_toBottomOf="@id/cal_username"
            app:layout_constraintLeft_toLeftOf="@id/cal_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다양한 프로젝트의 일정을 달력에 모아두었어요."/>
        <LinearLayout
            android:id="@+id/calendar_wrapper_view"
            app:layout_constraintTop_toBottomOf="@id/cal_desc"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0"
            android:elevation="4dp"
            android:background="@drawable/calendar_background_shape">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="15dp"
                tools:ignore="SpeakableTextPresentCheck"
                android:id="@+id/left_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/cheveron_right"
                app:layout_constraintBottom_toBottomOf="@+id/month_text"
                app:layout_constraintEnd_toStartOf="@+id/month_text"
                app:layout_constraintTop_toTopOf="@+id/month_text" />
            <TextView
                android:id="@+id/month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June"
                android:textSize="20sp"
                android:textColor="#527FF5"
                app:layout_constraintBottom_toBottomOf="@id/day_week_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                tools:ignore="SpeakableTextPresentCheck"
                android:id="@+id/right_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/month_text"
                android:background="@drawable/cheveron_left"
                app:layout_constraintStart_toEndOf="@+id/month_text"
                app:layout_constraintTop_toTopOf="@+id/month_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/day_week_text"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SUN"
                    android:textColor="@color/cal_day_name_color" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="MON"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="TUE"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="WED"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="THU"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="FRI"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SAT"
                    android:gravity="center"
                    android:textColor="@color/cal_day_name_color"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendar_view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/day_week_text"
                app:layout_constraintBottom_toTopOf="@+id/split"
                tools:layout_editor_absoluteX="0dp"/>
        </LinearLayout>





        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0월00일의 일정"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_wrapper_view"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/btn_cal_new_schedule"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginTop="5dp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/group_1871"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/calendar_wrapper_view"
            android:layout_marginRight="20dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schedule_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toBottomOf="@id/split"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>