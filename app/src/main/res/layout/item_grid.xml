<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="152.63dp"
    android:layout_margin="3dp"
    android:layout_height="117dp"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/grid_img"
        android:background="#D9D9D9"
        android:layout_gravity="center_horizontal"
        android:layout_width="132.95dp"
        android:layout_height="73.39dp"/>

    <TextView
        android:id="@+id/grid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="프로젝트 이름"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/grid_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="2023.06.13 ~ (진행 기간)"
        android:textColor="#99000000"
        android:textSize="8sp" />

</LinearLayout>