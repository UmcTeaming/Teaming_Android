<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:elevation="4dp"
        android:layout_width="236dp"
        android:layout_height="196dp"
        android:background="@drawable/round_border"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/hor_img"
                android:clipToOutline="true"
                android:background="@drawable/file_view_img"
                android:src="@drawable/file_background"
                android:layout_gravity="center_horizontal"
                android:layout_width="213dp"
                android:layout_height="119dp"/>

            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/hor_state"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/state_oval"/>

        </FrameLayout>



        <TextView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/hor_title"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/pretendard_bold"
            android:text="UMC 마스터 코스 Teaming" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/hor_date"
            android:textColor="#99000000"
            android:layout_width="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_medium"
            android:text="2023.06.13"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>