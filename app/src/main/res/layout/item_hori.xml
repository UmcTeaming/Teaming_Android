<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="179.5dp"
    android:layout_margin="11.5dp"
    android:layout_height="219dp"
    android:background="@drawable/round_border"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hor_img"
        android:background="#D9D9D9"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="167dp"
        android:layout_height="137dp"/>

    <TextView
        android:layout_marginLeft="6dp"
        android:textSize="12sp"
        android:id="@+id/hor_title"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:layout_width="157dp"
        android:layout_height="27dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="UMC 파이널 프로젝트" />

    <TextView
        android:id="@+id/hor_date"
        android:layout_marginLeft="6dp"
        android:textColor="#99000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:text="2023.06.13 ~ "
        android:textSize="10sp" />

</LinearLayout>