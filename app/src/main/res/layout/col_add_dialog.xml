<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <Button
            android:id="@+id/btn_x"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/btn_x"
            android:backgroundTint="#B3000000"/>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="색상 선택"
                android:textSize="11sp"
                android:fontFamily="@font/gmarket_sans_ttf_medium"/>

            <LinearLayout
                android:layout_marginTop="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="232.77dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_col_pink"
                    android:clickable="true"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color6"/>

                <ImageView
                    android:id="@+id/btn_col_yel"
                    android:clickable="true"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color8"/>

                <ImageView
                    android:id="@+id/btn_col_org"
                    android:clickable="true"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color7"/>

                <ImageView
                    android:id="@+id/btn_col_green"
                    android:clickable="true"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color9"/>

                <ImageView
                    android:id="@+id/btn_col_dpgreen"
                    android:clickable="true"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="232.77dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_col_blue"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color1"/>

                <ImageView
                    android:id="@+id/btn_col_dpblue"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color2"/>

                <ImageView
                    android:id="@+id/btn_col_pur"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color3"/>

                <ImageView
                    android:id="@+id/btn_col_black"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color4"/>

                <ImageView
                    android:id="@+id/btn_col_grey"
                    android:layout_marginLeft="17dp"
                    android:layout_width="32.22dp"
                    android:layout_height="32.22dp"
                    android:background="@drawable/color5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="53dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="308dp"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/col_view"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/state_oval"
                    android:backgroundTint="#FFAA00"/>

                <TextView
                    android:layout_marginLeft="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:text="해당 색상을 선택하시겠습니까?"
                    android:fontFamily="@font/gmarket_sans_ttf_medium"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_select"
                    android:layout_marginLeft="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:text="선택하기"
                    android:fontFamily="@font/gmarket_sans_ttf_bold"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/create_btn_round_border"
                    android:backgroundTint="#527FF5"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>