<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/file_type_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/pdf_img"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        />
    <LinearLayout
        android:id="@+id/file_descrip"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/file_type_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name_fi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:text="oo 교양 조별과제 자료조사 2"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:textColor="#80000000"
                android:textSize="15sp"
                android:text="comment"/>

            <TextView
                android:id="@+id/comment_num_fi"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:textColor="#F98984"
                android:textSize="15sp"
                android:text="3"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>