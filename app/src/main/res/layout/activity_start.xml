<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ellipse_119"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/text3"
        android:layout_marginEnd="180dp"
        app:layout_constraintEnd_toEndOf="@id/text11"
        >
    </ImageView>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/rectangle_1838"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintBottom_toBottomOf="@id/text1"
        >
    </ImageView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:textSize="28sp"
        android:textColor="#B30049FF"
        android:text="티밍"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="28sp"
        android:textColor="#000000"
        android:text=" 가입을 완료했어요!"
        app:layout_constraintTop_toTopOf="@+id/text1"
        app:layout_constraintStart_toEndOf="@+id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginTop="55dp"
        android:textSize="17sp"
        android:textColor="#4D000000"
        android:text="바로 로그인하여"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="@id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="17sp"
        android:textColor="#4D000000"
        android:text="효율적인 팀 프로젝트 기록 서비스,"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintStart_toStartOf="@id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="17sp"
        android:textColor="#4D000000"
        android:text="티밍을 이용할 수 있어요 :)"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintStart_toStartOf="@id/text1"
        >
    </TextView>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/start_group"
        app:layout_constraintTop_toTopOf="@id/text2"
        app:layout_constraintStart_toStartOf="parent"
        >
    </ImageView>

    <Button
        android:id="@+id/Button_go_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginTop="430dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/bin_blue"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:text="로그인 하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>
