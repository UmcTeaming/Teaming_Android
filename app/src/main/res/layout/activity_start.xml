<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:textSize="28sp"
        android:textColor="#B30049FF"
        android:text="티밍"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:textSize="28sp"
        android:layout_marginTop="150dp"
        android:textColor="#000000"
        android:text="가입을 완료했어요!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="19sp"
        android:textColor="#4D000000"
        android:text="바로 로그인하여"
        app:layout_constraintTop_toTopOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginLeft="50dp"
        android:textSize="19sp"
        android:textColor="#4D000000"
        android:text="효율적인 팀 프로젝트 기록 서비스,"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginLeft="50dp"
        android:textSize="19sp"
        android:textColor="#4D000000"
        android:text="티밍을 이용할 수 있어요 :)"
        app:layout_constraintTop_toBottomOf="@id/text3"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </TextView>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/logo_m_1"
        app:layout_constraintTop_toTopOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    </ImageView>

    <Button
        android:id="@+id/Button_go_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/gmarket_sans_ttf_medium"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/bin_blue"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="로그인 하기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text4"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
